<h1>Registrarse</h1>

<!--<%= @user %>-->

<%= form_with model: @user, url: sign_up_path do |form| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <% @user.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :email, 'Correo' %>
    <%= form.text_field :email, class: "form-control", placeholder: 'sergio@gmail.com' %>
  </div>
  <div class="mb-3">
    <%= form.label :password, 'Contrase単a' %>
    <%= form.password_field :password, class: "form-control", placeholder: 'contrase単a' %>
  </div>
  <div class="mb-3">
    <%= form.label :password_confirmation, 'Confirmar contrase単a' %>
    <%= form.password_field :password_confirmation, class: "form-control", placeholder: 'contrase単a' %>
  </div>

  <div class="mb-3">
    <%= form.submit "Registrarse", class: 'btn btn-primary' %>
  </div>
<% end %>
